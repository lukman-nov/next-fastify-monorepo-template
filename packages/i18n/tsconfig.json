{
  "extends": "@pos/tsconfig/node",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": ["*.ts", "src"],
  "exclude": ["node_modules"]
}
